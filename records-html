        // ì¸ì¦ í™•ì¸
        function checkAuth() {
            const authenticated = localStorage.getItem("authenticated") === "true";
            const authTime = parseInt(localStorage.getItem("auth_time") || "0");
            const currentTime = new Date().getTime();
            
            // ì¸ì¦ ì‹œê°„ì´ 1ì‹œê°„ì„ ì´ˆê³¼í–ˆëŠ”ì§€ í™•ì¸
            const oneHour = 60 * 60 * 1000; // 1ì‹œê°„ (ë°€ë¦¬ì´ˆ)
            const isAuthExpired = currentTime - authTime > oneHour;
            
            if (!authenticated || isAuthExpired) {
                localStorage.removeItem("authenticated");
                localStorage.removeItem("auth_time");
                window.location.href = "index.html";
                return false;
            }
            return true;
        }
        
        // ë¡œê·¸ì•„ì›ƒ í•¨ìˆ˜
        function logout() {
            localStorage.removeItem("authenticated");
            localStorage.removeItem("auth_time");
            window.location.href = "index.html";
        }
        
        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì¸ì¦ í™•ì¸
        if (!checkAuth()) {
            // ì¸ì¦ ì‹¤íŒ¨ ì‹œ ì²˜ë¦¬ëŠ” checkAuth í•¨ìˆ˜ ë‚´ì—ì„œ ì²˜ë¦¬ë¨
        }
        
        // íƒ­ ë³€ê²½ í•¨ìˆ˜
        function showTab(tabId) {
            // ëª¨ë“  íƒ­ ì»¨í…ì¸  ìˆ¨ê¸°ê¸°
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // ëª¨ë“  íƒ­ ë²„íŠ¼ ë¹„í™œì„±í™”
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active');
            });
            
            // ì„ íƒí•œ íƒ­ ë³´ì´ê¸°
            document.getElementById(tabId + '-tab').classList.add('active');
            
            // ì„ íƒí•œ íƒ­ ë²„íŠ¼ í™œì„±í™”
            document.querySelector(`.tab-button[onclick="showTab('${tabId}')"]`).classList.add('active');
        }
        
        // ë°ì´í„° ë¡œë“œ
        let table;
        let excelData = [];
        let chart;
        
        function loadData() {
            // íŒŒì¼ ì—…ë¡œë“œ ëŒ€ì‹  ë°ëª¨ ë°ì´í„° ìƒì„±
            const today = new Date();
            
            // í˜„ì¬ íŒŒì¼ ì—…ë¡œë“œ ì‹œê°„ í‘œì‹œ
            document.getElementById('update-date').textContent = today.toLocaleString();
            
            // íŒŒì¼ ì§ì ‘ ë¡œë“œë¥¼ ì‹œë„ (ì‹¤ì œ í™˜ê²½ì—ì„œëŠ” ì´ ì½”ë“œë¥¼ ì‚¬ìš©, í˜„ì¬ëŠ” ë°ëª¨ ë°ì´í„°)
            try {
                fetch('ì„±ë¹ˆì´_ê¸°ë¡.xlsx')
                    .then(response => {
                        if (!response.ok) throw new Error('íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.');
                        return response.arrayBuffer();
                    })
                    .then(buffer => {
                        processExcelFile(buffer);
                    })
                    .catch(error => {
                        console.warn("íŒŒì¼ ë¡œë“œ ì‹¤íŒ¨, ë°ëª¨ ë°ì´í„°ë¥¼ ìƒì„±í•©ë‹ˆë‹¤:", error);
                        createDemoData();
                    });
            } catch (error) {
                console.warn("íŒŒì¼ ë¡œë“œ ì‹œë„ ì‹¤íŒ¨, ë°ëª¨ ë°ì´í„°ë¥¼ ìƒì„±í•©ë‹ˆë‹¤:", error);
                createDemoData();
            }
        }
        
        function processExcelFile(buffer) {
            try {
                const workbook = XLSX.read(buffer, {
                    type: 'arraybuffer',
                    cellDates: true
                });
                
                const firstSheetName = workbook.SheetNames[0];
                const worksheet = workbook.Sheets[firstSheetName];
                
                // ë°ì´í„°ë¥¼ JSONìœ¼ë¡œ ë³€í™˜
                excelData = XLSX.utils.sheet_to_json(worksheet, { header: 1 });
                
                // ì²« ë²ˆì§¸ í–‰ì´ í—¤ë”ì¸ ê²½ìš°
                const headers = excelData[0];
                const dataRows = excelData.slice(1);
                
                // í†µê³„ ì—…ë°ì´íŠ¸
                updateStats(headers, dataRows);
                
                // ë°ì´í„° í…Œì´ë¸” ì´ˆê¸°í™”
                initTable(headers, dataRows);
                
                // ì°¨íŠ¸ ì´ˆê¸°í™”
                initChart(headers, dataRows);
            } catch (error) {
                console.error("ì—‘ì…€ íŒŒì¼ ì²˜ë¦¬ ì˜¤ë¥˜:", error);
                createDemoData();
            }
        }
        
        function createDemoData() {
            // ë°ëª¨ ë°ì´í„° ìƒì„± (ì„±ë¹ˆì´ì˜ ê¸°ë¡ì´ë¼ ê°€ì •)
            const headers = ["ë‚ ì§œ", "ìˆ˜í•™ ì ìˆ˜", "ê³¼í•™ ì ìˆ˜", "êµ­ì–´ ì ìˆ˜", "ìš´ë™ì‹œê°„(ë¶„)", "ë…ì„œëŸ‰(í˜ì´ì§€)", "ë©”ëª¨"];
            
            const dataRows = [];
            const today = new Date();
            
            // ìµœê·¼ 30ì¼ ë°ì´í„° ìƒì„±
            for (let i = 30; i >= 0; i--) {
                const date = new Date(today);
                date.setDate(today.getDate() - i);
                
                dataRows.push([
                    date.toISOString().split('T')[0], // ë‚ ì§œ
                    Math.floor(Math.random() * 30) + 70, // ìˆ˜í•™ ì ìˆ˜ (70-100)
                    Math.floor(Math.random() * 30) + 70, // ê³¼í•™ ì ìˆ˜ (70-100)
                    Math.floor(Math.random() * 30) + 70, // êµ­ì–´ ì ìˆ˜ (70-100)
                    Math.floor(Math.random() * 60) + 30, // ìš´ë™ì‹œê°„ (30-90ë¶„)
                    Math.floor(Math.random() * 50) + 10, // ë…ì„œëŸ‰ (10-60í˜ì´ì§€)
                    ["ì—´ì‹¬íˆ í–ˆì–´ìš”", "ì¡°ê¸ˆ ì–´ë ¤ì› ì–´ìš”", "ì˜ í–ˆì–´ìš”", "ë…¸ë ¥í–ˆì–´ìš”"][Math.floor(Math.random() * 4)] // ë©”ëª¨
                ]);
            }
            
            // í†µê³„ ì—…ë°ì´íŠ¸
            updateStats(headers, dataRows);
            
            // ë°ì´í„° í…Œì´ë¸” ì´ˆê¸°í™”
            initTable(headers, dataRows);
            
            // ì°¨íŠ¸ ì´ˆê¸°í™”
            initChart(headers, dataRows);
            
            // ì „ì—­ ë³€ìˆ˜ì— ì €ì¥
            excelData = [headers, ...dataRows];
        }
        
        function updateStats(headers, dataRows) {
            document.getElementById('total-records').textContent = dataRows.length;
            document.getElementById('column-count').textContent = headers.length;
            
            if (dataRows.length > 0) {
                // ë§ˆì§€ë§‰ ë°ì´í„°ì˜ ë‚ ì§œ (ì²« ë²ˆì§¸ ì—´ì´ ë‚ ì§œë¼ê³  ê°€ì •)
                let latestDate = dataRows[dataRows.length - 1][0];
                
                // Date ê°ì²´ì¸ ê²½ìš° í¬ë§·íŒ…
                if (latestDate instanceof Date) {
                    latestDate = latestDate.toISOString().split('T')[0];
                }
                
                document.getElementById('latest-date').textContent = latestDate;
            } else {
                document.getElementById('latest-date').textContent = "ë°ì´í„° ì—†ìŒ";
            }
        }
        
        function initTable(headers, dataRows) {
            // ë°ì´í„°ë¥¼ í…Œì´ë¸”ëŸ¬ í¬ë§·ìœ¼ë¡œ ë³€í™˜
            const tableData = dataRows.map(row => {
                const rowObj = {};
                headers.forEach((header, index) => {
                    rowObj[header] = row[index];
                });
                return rowObj;
            });
            
            // ì»¬ëŸ¼ ì •ì˜ ìƒì„±
            const tableColumns = headers.map(header => {
                return {
                    title: header,
                    field: header,
                    headerFilter: true
                };
            });
            
            // í…Œì´ë¸” ìƒì„±
            table = new Tabulator("#data-table", {
                data: tableData,
                columns: tableColumns,
                layout: "fitColumns",
                pagination: "local",
                paginationSize: 10,
                paginationSizeSelector: [5, 10, 20, 50],
                movableColumns: true,
                responsiveLayout: "collapse",
                placeholder: "ë°ì´í„°ê°€ ì—†ìŠµë‹ˆë‹¤."
            });
            
            // ê²€ìƒ‰ ê¸°ëŠ¥ ì—°ê²°
            document.getElementById("search-input").addEventListener("keyup", function() {
                table.setFilter(matchAny, {value: this.value});
            });
        }
        
        function initChart(headers, dataRows) {
            // ë°ì´í„°ê°€ ì—†ìœ¼ë©´ ì°¨íŠ¸ ì»¨í…Œì´ë„ˆì— ë©”ì‹œì§€ í‘œì‹œ
            if (dataRows.length === 0) {
                document.getElementById('chart').innerHTML = '<div class="no-data-message">ì°¨íŠ¸ë¥¼ í‘œì‹œí•  ë°ì´í„°ê°€ ì—†ìŠµë‹ˆë‹¤.</div>';
                return;
            }
            
            // ì°¨íŠ¸ ì»¨í…Œì´ë„ˆ ì´ˆê¸°í™”
            document.getElementById('chart').innerHTML = '<canvas id="chart-canvas"></canvas>';
            const chartCanvas = document.getElementById('chart-canvas');
            const ctx = chartCanvas.getContext('2d');
            
            // ê¸°ë³¸ì ìœ¼ë¡œ ìˆ˜í•™, ê³¼í•™, êµ­ì–´ ì ìˆ˜ë¥¼ ì°¨íŠ¸ë¡œ í‘œì‹œ (í—¤ë”ì— ìˆë‹¤ë©´)
            const scoreHeaders = headers.filter(header => 
                header.includes('ì ìˆ˜') || 
                header.includes('ìˆ˜í•™') || 
                header.includes('ê³¼í•™') || 
                header.includes('êµ­ì–´')
            );
            
            // ë‚ ì§œ ì»¬ëŸ¼ ì°¾ê¸° (ì²« ë²ˆì§¸ ì»¬ëŸ¼ì´ ë‚ ì§œë¼ê³  ê°€ì •)
            const dateIndex = 0;
            
            // ë°ì´í„° ì¤€ë¹„
            const labels = dataRows.map(row => {
                const date = row[dateIndex];
                return date instanceof Date ? date.toISOString().split('T')[0] : date;
            });
            
            const datasets = scoreHeaders.map((header, index) => {
                const headerIndex = headers.indexOf(header);
                return {
                    label: header,
                    data: dataRows.map(row => row[headerIndex]),
                    borderColor: getColor(index),
                    backgroundColor: getColor(index, 0.2),
                    tension: 0.1
                };
            });
            
            // ì°¨íŠ¸ ìƒì„±
            chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: datasets
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'ì„±ë¹ˆì´ ì ìˆ˜ ì¶”ì´'
                        },
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            min: 0,
                            max: 100,
                            ticks: {
                                stepSize: 10
                            }
                        }
                    }
                }
            });
        }
        
        // ì»¬ëŸ¬ ë°°ì—´ ìƒì„± í•¨ìˆ˜
        function getColor(index, alpha = 1) {
            const colors = [
                `rgba(75, 192, 192, ${alpha})`,
                `rgba(54, 162, 235, ${alpha})`,
                `rgba(153, 102, 255, ${alpha})`,
                `rgba(255, 159, 64, ${alpha})`,
                `rgba(255, 99, 132, ${alpha})`,
                `rgba(255, 206, 86, ${alpha})`
            ];
            return colors[index % colors.length];
        }
        
        // ë°ì´í„° ë‚´ë³´ë‚´ê¸° í•¨ìˆ˜
        function exportData() {
            if (!excelData || excelData.length === 0) {
                alert("ë‚´ë³´ë‚¼ ë°ì´í„°ê°€ ì—†ìŠµë‹ˆë‹¤.");
                return;
            }
            
            // CSV íŒŒì¼ë¡œ ë‚´ë³´ë‚´ê¸°
            const csv = Papa.unparse(excelData);
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            
            // ë‹¤ìš´ë¡œë“œ ë§í¬ ìƒì„± ë° í´ë¦­
            const link = document.createElement('a');
            link.href = url;
            link.setAttribute('download', 'ì„±ë¹ˆì´_ê¸°ë¡.csv');
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
        
        // ê²€ìƒ‰ í•„í„° í•¨ìˆ˜ - ëª¨ë“  ì»¬ëŸ¼ì—ì„œ ê²€ìƒ‰
        function matchAny(data, filterParams) {
            const value = filterParams.value.toLowerCase();
            
            // ê°’ì´ ë¹„ì–´ìˆìœ¼ë©´ ëª¨ë“  í–‰ í‘œì‹œ
            if (!value) return true;
            
            // ëª¨ë“  í•„ë“œì—ì„œ ê²€ìƒ‰ì–´ í™•ì¸
            for (let key in data) {
                if (data[key] && data[key].toString().toLowerCase().includes(value)) {
                    return true;
                }
            }
            return false;
        }
        
        // í˜ì´ì§€ ë¡œë“œ ì‹œ ë°ì´í„° ë¡œë“œ
        window.onload = function() {
            loadData();
            
            // ì£¼ê¸°ì ìœ¼ë¡œ ì¸ì¦ í™•ì¸ (5ë¶„ë§ˆë‹¤)
            setInterval(checkAuth, 5 * 60 * 1000);
        };
    </script>
